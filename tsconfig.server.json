{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext", // or CommonJS if not using "type": "module"
    "moduleResolution": "node",
    "jsx": "react",
    "noEmit": true, // keep it unless you plan to compile
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "types": ["node"],
    "baseUrl": "."
  },
  "include": ["server/**/*", "shared/**/*"]
}
